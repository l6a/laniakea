cmd=$0
sub=$1

function help {
	cat << EOF
Usage: $cmd <subcommand> [args]
EOF
	exit 0
}

function unknown {
	cat << EOF
Unknown subcommand "$sub"; try \`$cmd --help\`.
EOF
	exit 1
}

function activate {
	img=$(docker images -f reference="*/$1*:*" -q | head -n1)
	docker run --rm -it -u $(id -u):$(id -g) -e USER "$img" "${@:2}"
	exit $?
}

case $sub in
	"--help" | "-h" | "" ) help;;
	"activate" ) activate "${@:2}";;
	*) activate "$@";;
esac
