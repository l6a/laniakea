cmd=$0
sub=$1

function help {
	cat << EOF
Usage: $cmd <subcommand> [args]
EOF
	exit 0
}

function unknown {
	cat << EOF
Unknown subcommand "$sub"; try \`$cmd --help\`.
EOF
	exit 1
}

function run {
	docker run --rm -it -u $(id -u):$(id -g) -e USER "${@}"
}

function activate {
	i="$1"
	case "$i" in
		-*            ) run "$@"; exit $?;;
		*/*:* | */*@* ) p=("$i" "$i*");;
		*:*   | *@*   ) p=("$i" "$i*" "*/$i" "*/$i*");;
		*/*           ) p=("$i" "$i*" "$i:*" "$i*:*");;
		*             ) p=("$i" "$i*" "$i:*" "$i*:*" "*/$i" "*/$i*" "*/$i:*" "*/$i*:*");;
	esac

	for q in "${p[@]}"; do
		i=$(docker images -f reference="*/$1*:*" -q | head -n1)
		test -n "$i" && break
	done
	test -z "$i" && unknown "$i"

	run -v "$HOME:/home/$USER" "$i" "${@:2}"
}

case "$sub" in
	"--help" | "-h" | "" ) help             ;;
	"activate"           ) activate "${@:2}";;
	*                    ) activate "$@"    ;;
esac
