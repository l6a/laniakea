#==============================================================================
# The `laniakea` command supports multiple container backends,
# including docker and singularity

for backend in docker singularity; do
	if ${backend} --version &> /dev/null; then
		L6A_BACKEND=${backend}
		break
	fi
done; unset backend

if [ -z ${L6A_BACKEND+x} ]; then
	echo 'Container backend not found'
	exit -1
else
	L6A_BACKEND_EXEC=$(which $L6A_BACKEND)
fi

#==============================================================================
# The `laniakea` command has three functionalities: `help`, `unknown`,
# and `run`, which should all exit after done.

help() {
	cat << EOF
Usage: $cmd <subcommand> [opts] [args]

laniakea makes running containers natural and portable.
${L6A_BACKEND} backend is used: "${L6A_BACKEND_EXEC}".

Basic commands:
  activate        Run a ${L6A_BACKEND} container as an environment.

Options:
  --develop,-d    Activate a ${L6A_BACKEND} environment in development mode
  --help,-h       Print this help

Report laniakea (l6a) bugs to <chanc@arizona.edu>.
EOF
	exit 0
}

unknown() {
	cat << EOF
Unknown subcommand "$sub"; try \`$cmd --help\`.
EOF
	exit 1
}

docker_search() {
	i="$1" # image: keep it short so the cases below are readable
	case "$i" in
	*/*) p=("$i" "$i*");;
	*  ) p=("$i" "$i*" "*/$i" "*/$i*");;
	esac

	for q in "${p[@]}"; do
		i=$(${L6A_BACKEND_EXEC} images -f "reference=$q" -q | head -n1)
		test -n "$i" && break
	done
	test -z "$i" && unknown "$i"

	${L6A_BACKEND_EXEC} images      \
		--filter "reference=$q" \
		--format '{{.Repository}}:{{.Tag}}' | head -n1
}

docker_run() {
	${L6A_BACKEND_EXEC} run -u $(id -u):$(id -g) -e USER "${FLAGS[@]}" "${@}"
	exit 0
}

singularity_run() {
	${L6A_BACKEND_EXEC} shell "${FLAGS[@]}" "${@}"
	exit 0
}

#==============================================================================
# The `activate` function should check its first argument, look for
# the apropiate docker image to use, and send the arguments to the
# previous functionalities.

FLAGS=()

addflags() {
	FLAGS=("${FLAGS[@]}" "$@")
}

activate() {
	case "$1" in
	-*) ${L6A_BACKEND}_run "$@"; exit $?;;
	esac

	n=$(docker_search "$1")

	echo "[laniakea] activating \"$n\" with ${L6A_BACKEND}"

	addflags '--rm' '-i' '-t'
	addflags -v "$HOME:/home/$USER"
	${L6A_BACKEND}_run "$n" "${@:2}"

	exit 1 # should never reach here
}

#==============================================================================
# The "main" program

cmd=$(basename $0)

while :; do
	sub=$1
	case "$sub" in
	"--develop" | "-d"  )
		# Development mode for python packages
		shift
		pkg="$(basename $1)"
		hst="${1%:*}"
		con="/usr/local/src/${pkg##*:}"
		test ${hst:0:1} == '/' || hst="$PWD/$hst" # absolute path
		echo "Dev-mode for \"$pkg\" (\"$hst\" -> \"$con\")"
		addflags -v "$hst:$con"
		;;
	"--help" | "-h" | "") help                  ;;
	"--x11"  | "-x"     ) addflags $(x11-flags) ;;
	"activate"          ) activate "${@:2}"     ;;
	*                   ) activate "$@"         ;;
	esac
	shift
done
